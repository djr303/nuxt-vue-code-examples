{
  "compilerOptions": {
    "target": "es5", 
    "module": "CommonJs",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "typeRoots": [
      "./node_modules",
      "./types/index.d.ts"
    ],
    "types": ["@nuxt", "node", "vuex", "vue-router"]
  },
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist"
  ]
}
